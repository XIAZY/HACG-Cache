/*************************** Toggle Box ***************************/

h3.toggle {
background-repeat: no-repeat;
background-position: -15px -16px; 
font-size: 16px;
padding: 0 0 10px 23px;
cursor: pointer;
}
h3.toggle a {
text-decoration: none;
display: block;
}
h3.toggle-active {
background-position: -64px -67px; 
}
.toggle-box {
clear:both;
margin: 0 0 50px 0;
overflow: hidden;
}
h3.toggle {
background-image: url(images/sprite.png);
font-size: 18px;
}